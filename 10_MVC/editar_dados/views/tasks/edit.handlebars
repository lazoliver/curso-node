<div>
    <h2>
        Edit Task
    </h2>
    <form action="/tasks/add" method="POST">
        <input type="hidden" name="id" value="{{task.id}}">
        <div>
            <label for="title">
                Título: 
            </label>
            <input type="text" name="title" placeholder="Escreva sua tarefa..." value="{{task.title}}">
        </div>
        <div>
            <label for="description">
                Descrição: 
            </label>
            <textarea type="text" name="description" placeholder="Descreva sua tarefa">{{task.description}}</textarea>
        </div>
        <div>
            <input type="submit" value="Editar">
        </div>
    </form>
</div>