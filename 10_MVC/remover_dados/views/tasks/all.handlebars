<main>
    <div class="container">
        <h2>
            All Tasks
        </h2>
        <ul>
            {{#each tasks}}
                <li class="task">
                    <a href="/">
                        {{this.title}}
                    </a>
                    <div class="action">
                        <form action="/tasks/remove" method="POST">
                            <input type="hidden" name="id" value={{this.id}}>
                            <button type="submit" class="btn">
                                <i class="bi bi-check2"></i>
                            </button>
                        </form>
                        <form action="/tasks/remove" method="POST">
                            <input type="hidden" name="id" value={{this.id}}>
                            <button type="submit" class="btn">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                        </form>
                        <form action="/tasks/remove" method="POST">
                            <input type="hidden" name="id" value={{this.id}}>
                            <button type="submit" class="btn">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </form>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</main>