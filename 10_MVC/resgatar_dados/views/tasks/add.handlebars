<main>
    <div class="container">
        <h2>
            Create Task
        </h2>
        <form action="/tasks/add" method="POST">
            <div>
                <label for="title">
                    Título: 
                </label>
                <input type="text" name="title" placeholder="Escreva sua tarefa...">
            </div>
            <div>
                <label for="description">
                    Descrição: 
                </label>
                <textarea type="text" name="description" placeholder="Descreva sua tarefa"></textarea>
            </div>
            <div>
                <input type="submit" value="Criar">
            </div>
        </form>
    </div>
</main>