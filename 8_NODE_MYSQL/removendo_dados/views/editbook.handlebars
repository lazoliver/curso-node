<div class="container">
    <form action="/books/update" method="POST">
        <input type="hidden" name="id" value="{{book.id}}">
        <h2>
            Edite o seu livro:
        </h2>
        <a href="/books">Ver livros</a>
        <div>
            <label for="title">Título:</label>
            <input type="text" name="title" placeholder="O título do seu livro" value="{{book.title}}" />
        </div>
        <div>
            <label for="pageqty">Número de páginas:</label>
            <input type="number" name="pageqty" placeholder="Número de páginas" value="{{book.pageqty}}" />
        </div>
        <input type="submit" value="Atualizar">
    </form>
</div>